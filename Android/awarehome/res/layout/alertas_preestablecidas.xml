<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <!-- android:background="#F2F0ED" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F6ABB" >

        <TextView
            android:id="@+id/alertas_preestablecidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Alertas Preestablecidas"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1000dp" >

        <Spinner
            android:id="@+id/lista_alertas_preestablecidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/nombre_alerta_preestablecida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lista_alertas_preestablecidas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Nombre de Alerta"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/sensor_alerta_preestablecida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_alerta_preestablecida"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Sensor"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/dato_alerta_preestablecida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/simbolo_alerta_preestablecida"
            android:layout_alignBottom="@+id/simbolo_alerta_preestablecida"
            android:layout_alignRight="@+id/nombre_alerta_preestablecida"
            android:text="Dato"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/simbolo_alerta_preestablecida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_alerta_preestablecida"
            android:layout_below="@+id/sensor_alerta_preestablecida"
            android:layout_marginTop="56dp"
            android:text="simbolo"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/seleccionar_alerta_preestablecida"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/simbolo_alerta_preestablecida"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:layout_margin="10dp"
            android:background="#3F6ABB"
            android:text="Seleccionar esta alerta"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>