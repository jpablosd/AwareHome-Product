<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Acces" >

    <TextView
        android:id="@+id/textView1"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Crear de Alerta"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/nombre_alerta"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:hint="Nombre Alerta" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombre_alerta"
        android:layout_below="@+id/nombre_alerta"
        android:text="Sensores:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/simbolo_regla"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sensor_temperatura"
        android:layout_below="@+id/sensor_temperatura"
        android:layout_toLeftOf="@+id/textView1"
        android:ems="10"
        android:hint="&lt;" 
    />

    <EditText
        android:id="@+id/dato_regla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/simbolo_regla"
        android:layout_alignBottom="@+id/simbolo_regla"
        android:layout_alignRight="@+id/nombre_alerta"
        android:ems="10"
        android:hint="10"
        android:inputType="number"
        android:textColor="#000" />

    <Button
        android:id="@+id/crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simbolo_regla"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Crear Alerta" />

    <CheckBox
        android:id="@+id/sensor_temperatura"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Temperatura" />

    <CheckBox
        android:id="@+id/sensor_humedad"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sensor_temperatura"
        android:layout_alignRight="@+id/dato_regla"
        android:text="Humedad" />

</RelativeLayout>